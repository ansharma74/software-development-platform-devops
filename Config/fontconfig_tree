#!/bin/bash

#################### Script Header #########################
#Author         : Anil Sharma (CBIR 2013 - 2015)
#Email          : cbir.anil@gmail.com
#################### End #################################
# Place yourself outside of the fontconfig source tree.  In
# this example, the environment variable FONTCONFIG_SOURCE
# is assumed to contain the absolute fontconfig source directory.

(cd $FONTCONFIG_SOURCE; find . -type f) | while read F; do
	mkdir -p `dirname $F`
	ln -s $FONTCONFIG_SOURCE/$F $F
done

